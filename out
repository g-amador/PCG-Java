[0msudo chmod +x build_all.sh
[0msudo ./build_all.sh
[0m./facedetect --cascade="/usr/local/share/OpenCV/haarcascades/haarcascade_frontalface_alt.xml" lena.jpg

[32mExample to compile using OpenCV:
[0mclear && g++ 'pkg-config opencv --cflags' -Wall novo.cpp -o mycode 'pkg-config opencv --libs'

